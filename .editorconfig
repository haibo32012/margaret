root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{ex,exs}]
indent_size = 2
max_line_length = 100

[*.js]
indent_size = 2
max_line_length = 100

[*.py]
indent_size = 4
max_line_length = 79

[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 100

[*.{json,yml}]
indent_size = 2

[nginx.conf]
indent_size = 2
